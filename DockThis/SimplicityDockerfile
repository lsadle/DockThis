FROM microsoft/dotnet:2.2-aspnetcore-runtime AS base
WORKDIR /app
EXPOSE 80

FROM microsoft/dotnet:2.2-sdk AS build
WORKDIR /src
COPY ["./Common/Common.csproj", "Common/"]
COPY ["./Simplicity/Simplicity.csproj", "Simplicity/"]
RUN dotnet restore "Common/Common.csproj"
RUN dotnet restore "./Simplicity/Simplicity.csproj"
COPY . .
WORKDIR "/src"
RUN dotnet build "./Simplicity/Simplicity.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "./Simplicity/Simplicity.csproj" -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "./Simplicity/Simplicity.dll"]