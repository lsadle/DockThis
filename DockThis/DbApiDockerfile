FROM microsoft/dotnet:2.2-aspnetcore-runtime AS base
WORKDIR /app
EXPOSE 80

FROM microsoft/dotnet:2.2-sdk AS build
WORKDIR /src
COPY ["./Common/Common.csproj", "Common/"]
COPY ["./DbApi/DbApi.csproj", "DbApi/"]
RUN dotnet restore "Common/Common.csproj"
RUN dotnet restore "./DbApi/DbApi/DbApi.csproj"
COPY . .
WORKDIR "/src"
RUN dotnet build "./DbApi/DbApi.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "./DbApi/DbApi.csproj" -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "./DbApi/DbApi.dll"]